document.addEventListener('DOMContentLoaded', () => {
    console.log('Google Classroom Clone Loaded');
    
    const classList = document.getElementById('class-list');
    const assignments = document.getElementById('assignments');

    // Example of adding a new class
    function addClass(className) {
        const newClass = document.createElement('li');
        newClass.textContent = className;
        classList.querySelector('ul').appendChild(newClass);
    }

    // Example of adding a new assignment
    function addAssignment(assignmentName) {
        const newAssignment = document.createElement('li');
        newAssignment.textContent = assignmentName;
        assignments.querySelector('ul').appendChild(newAssignment);
    }

    // Adding sample data
    addClass('Class 4');
    addAssignment('Assignment 4');
});
# app.py

from flask import Flask, render_template

app = Flask(__name__)

@app.route('/')
def home():
    return render_template('index.html')

if __name__ == '__main__':
    app.run(debug=True)
